{
    "compilerOptions": {
        "inlineSourceMap": true,
        "jsx": "react",
        "module": "commonjs",
        "noImplicitAny": true,
        "outDir": "dist/",
        "pretty": true,
        "target": "es2017",
        "types": [
            "body-parser",
            "chalk",
            "dotenv",
            "express",
            "jsonwebtoken",
            "lodash",
            "mongodb",
            "morgan",
            "node",
            "request-promise",
            "uuid"
        ]
    },
    "include": [
        "server/**/*"
    ],
    "compileOnSave": false,
    "buildOnSave": false,
    "atom": {
        "rewriteTsconfig": false
    }
}
